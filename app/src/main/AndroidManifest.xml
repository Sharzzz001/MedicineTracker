<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.medicinetracker">

    <application
        android:allowBackup="true"
        android:icon="@drawable/logomt"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logomt"
        android:supportsRtl="true"
        android:theme="@style/Theme.MedicineTracker">
        <activity android:name=".caretakeraddalarms.CtAddMed"></activity>
        <activity android:name=".caretakeraddalarms.CtAddAlarm" />
        <activity android:name=".LauncherScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".PatientMedicines.editalarm" />
        <activity android:name=".AddAlarm.AddAlarmActivity" />
        <activity android:name=".PatientDetail" />
        <activity android:name=".editprofile" />
        <activity android:name=".PatientMedicines.AddMedActivity" />

        <activity android:name=".LoginRegister.register" />
        <activity android:name=".MainActivity" />
        <activity android:name=".LoginRegister.login" />

        <receiver android:name=".AlarmServices.AlertReceiver" />
        <receiver android:name=".AlarmServices.CaretakerReceiver" />
        <receiver android:name=".AlarmServices.rec">
            <intent-filter>
                <action android:name="my.action.string" />
            </intent-filter>
        </receiver>
    </application>

</manifest>