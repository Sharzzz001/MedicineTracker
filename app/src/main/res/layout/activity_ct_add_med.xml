<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".caretakeraddalarms.CtAddMed"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10sp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_marginTop="20sp"
            android:orientation="vertical"

            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ptname"
                android:ems="10"
                android:text="Patient Name: "
                style="@style/LabelStyle"
                android:textColor="@color/orange"


                />
            <EditText
                android:id="@+id/MedName12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                style="@style/EditTextStyle"
                android:hint="Medication Name"
                android:inputType="textPersonName"
                />

            <Spinner
                android:id="@+id/typeSpinner12"
                android:layout_width="match_parent"
                android:layout_marginTop="10sp"
                android:layout_height="30sp"
                android:background="@drawable/blue_outline"
                android:popupBackground="@drawable/spinnerback"
                android:spinnerMode="dropdown"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/numpick12"
                android:layout_weight="2"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_display_medium"
                android:text="Dose"
                android:textColor="@color/white"
                android:textSize="20dp"
                />

            <NumberPicker
                android:id="@+id/numberPicker12"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                />

            <TextView
                android:id="@+id/typetext12"
                android:layout_weight="3"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_display_medium"
                android:textSize="20dp"
                />


        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/btndone12"
                android:layout_weight="1"
                style="@style/StrokeButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/rightarrow"
                android:background="?attr/selectableItemBackground"
                android:text="proceed to set alarms"

                />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>